/// ## One to One Relation
/// [Prisma Documentation](https://www.prisma.io/docs/concepts/components/prisma-schema/relations/one-to-one-relations)
/// @seed
model User {
  id      Int      @id @default(autoincrement())
  profile Profile?
  /// @mock faker.name.firstName
  name    String
}

model Profile {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique // relation scalar field (used in the `@relation` attribute above)
  /// @mock faker.internet.email
  email  String
}
